# Supabase Configuration
# Get these from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# ‚ö†Ô∏è SERVER-ONLY - Never expose to client
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Stripe Configuration
# Get these from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx

# Stripe Webhooks
# Get this from: stripe listen --forward-to localhost:3000/api/webhooks/stripe
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Email Service (for booking confirmations)
# Get from: https://resend.com/dashboard
RESEND_API_KEY=your-resend-api-key

# Application URLs
# Production: Use actual subdomains
# Development: Use localhost (subdomain routing disabled in dev)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_ADMIN_URL=http://localhost:3000

# For production deployment:
# NEXT_PUBLIC_APP_URL=https://app.ninowash.com
# NEXT_PUBLIC_ADMIN_URL=https://gestion.ninowash.com

# Supabase Auth Redirect (Development)
NEXT_PUBLIC_DEV_SUPABASE_REDIRECT_URL=http://localhost:3000/auth/callback

# üî• FEATURE FLAG: Subscription Teaser
# Controls subscription availability (monthly/quarterly plans)
# Set to "false" for MVP launch (subscriptions shown as teasers with blur)
# Set to "true" to fully activate subscriptions (CTAs become functional)
# Default: false
NEXT_PUBLIC_SUBSCRIPTIONS_ENABLED=false

# üî• FEATURE FLAG: Bookings Control
# Controls booking availability
# Set to "false" to disable bookings (shows toast with Instagram contact)
# Set to "true" for normal booking flow
# Default: true
NEXT_PUBLIC_BOOKINGS_ENABLED=true
